<?xml version="1.0" encoding="UTF-8" ?>
 <project name="HelloWorld" default="run" basedir=".">
 <property name="src" value="src"/>
 <property name="dest" value="classes"/>
 <property name="lib.dir" value="lib"/>  
 <property name="maximVnHr_jar" value="D:\mxportal\webroot\WEB-INF\lib\maximVnHr.jar"/>
 <target name="init">
    <mkdir dir="${dest}"/>
 </target>
 <target name="compile" depends="init">
    <javac srcdir="${src}" destdir="${dest}" includeantruntime="on" />
 </target>
 <target name="build" depends="compile">
    <jar jarfile="${maximVnHr_jar}" basedir="${dest}"/>
 </target>
 <target name="run" depends="build">
    <java classname="cn.com.maxim.portal.attendan" classpath="${maximVnHr_jar}"/>
 </target>
 <target name="clean">
    <delete dir="${dest}" />
    <delete file="${maximVnHr_jar}" />
 </target>
 <target name="rerun" depends="clean,run">
    <ant target="clean" />
    <ant target="run" />
 </target>
 </project>